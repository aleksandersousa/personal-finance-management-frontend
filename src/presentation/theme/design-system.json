        "background": "#FFFFFF",
        "borderRadius": "1.25rem",
        "padding": "1.5rem",
        "maxWidth": "28rem",
        "shadow": "0 25px 50px -12px rgba(0, 0, 0, 0.25)"
      }
    }
  },
  "layout": {
    "structure": {
      "mobile": {
        "hierarchy": [
          "Status Bar (2rem)",
          "App Bar (4rem)",
          "Horizontal Scroll List (5rem, optional)",
          "Navigation Tabs (3rem, optional)",
          "Content Area (flex: 1)",
          "Bottom Navigation (4rem, fixed)"
        ],
        "description": "Vertical layout hierarchy for mobile screens"
      }
    },
    "container": {
      "maxWidth": "28rem",
      "padding": "1.5rem",
      "margin": "0 auto"
    },
    "grid": {
      "gap": "1rem",
      "columns": {
        "mobile": 1,
        "tablet": 2,
        "desktop": 3
      }
    },
    "section": {
      "marginBottom": "2rem",
      "gap": "1rem"
    }
  },
  "animations": {
    "duration": {
      "fast": "150ms",
      "normal": "250ms",
      "slow": "350ms"
    },
    "easing": {
      "default": "cubic-bezier(0.4, 0, 0.2, 1)",
      "in": "cubic-bezier(0.4, 0, 1, 1)",
      "out": "cubic-bezier(0, 0, 0.2, 1)",
      "bounce": "cubic-bezier(0.68, -0.55, 0.265, 1.55)"
    },
    "transitions": {
      "button": "all 250ms cubic-bezier(0.4, 0, 0.2, 1)",
      "card": "transform 250ms cubic-bezier(0.4, 0, 0.2, 1), box-shadow 250ms cubic-bezier(0.4, 0, 0.2, 1)",
      "fade": "opacity 250ms cubic-bezier(0.4, 0, 0.2, 1)",
      "theme": "background-color 250ms cubic-bezier(0.4, 0, 0.2, 1), color 250ms cubic-bezier(0.4, 0, 0.2, 1)"
    }
  },
  "iconography": {
    "style": "Rounded line icons with consistent stroke width",
    "size": {
      "xs": "1rem",
      "sm": "1.25rem",
      "md": "1.5rem",
      "lg": "2rem",
      "xl": "2.5rem"
    },
    "strokeWidth": "1.5px",
    "guidelines": [
      "Use rounded caps and joins",
      "Maintain consistent optical weight",
      "Icons should be recognizable at small sizes",
      "Pair with background containers for emphasis",
      "Icons in app bars and bottom nav should be white for contrast"
    ]
  },
  "dataVisualization": {
    "principles": [
      "Use minimal colors for clarity",
      "Highlight active or current data points",
      "Include percentage badges for quick insights",
      "Use circular/donut charts for part-to-whole relationships",
      "Use bar charts for time-series comparisons",
      "Always include labels and legends"
    ],
    "colorMapping": {
      "income": "#10B981",
      "expense": "#EF4444",
      "neutral": "#6B7280",
      "active": "#000000",
      "inactive": "#E5E7EB"
    }
  },
  "accessibility": {
    "contrast": {
      "minimum": "4.5:1 for normal text",
      "enhanced": "7:1 for important text",
      "largeText": "3:1 for text larger than 18pt"
    },
    "focusIndicator": {
      "color": "#0066FF",
      "width": "3px",
      "style": "solid",
      "offset": "2px"
    },
    "touchTargets": {
      "minimum": "44px × 44px",
      "recommended": "48px × 48px"
    }
  },
  "responsive": {
    "breakpoints": {
      "mobile": "320px",
      "tablet": "768px",
      "desktop": "1024px",
      "wide": "1440px"
    },
    "strategy": "Mobile-first with progressive enhancement"
  },
  "patterns": {
    "appBarWithScrollList": {
      "structure": "App Bar → Horizontal Scrollable Profile/Contact List",
      "description": "Brand gradient app bar with horizontal scrollable list below for secondary navigation",
      "spacing": "No gap between app bar and scroll list"
    },
    "listItemWithBadge": {
      "structure": "Avatar + Title/Subtitle + Timestamp + Unread Badge",
      "layout": "Horizontal with space-between",
      "avatarSize": "3rem",
      "badgePosition": "Top-right of avatar or right-aligned",
      "description": "List item pattern with circular avatar, text content, and notification badge"
    },
    "navigationTabs": {
      "structure": "Horizontal tabs with selected state",
      "light": "Selected: white background, dark text | Unselected: light gray background, muted text",
      "dark": "Selected: dark gray background, white text | Unselected: darker background, muted text",
      "description": "Tab navigation with inverted selected states between themes"
    },
    "floatingBottomNav": {
      "structure": "Fixed bottom navigation with rounded top corners",
      "background": "Brand gradient",
      "icons": "White for contrast",
      "description": "Floating bottom navigation bar with consistent brand color"
    }
  },
  "darkModeStrategy": {
    "principles": [
      "Primary brand color (teal/green gradient) remains consistent across themes",
      "Success color (green) remains consistent for badges and notifications",
      "Neutral grayscale adapts: use lighter grays in light mode, darker grays in dark mode",
      "Selected/active states invert between themes using neutral colors",
      "Status bar content adapts: dark icons in light mode, white icons in dark mode"
    ],
    "consistentElements": {
      "appBar": {
        "background": "linear-gradient(135deg, #128C7E 0%, #075E54 100%)",
        "text": "#FFFFFF",
        "icon": "#FFFFFF",
        "description": "Primary brand gradient - never changes between themes"
      },
      "bottomNav": {
        "background": "linear-gradient(135deg, #128C7E 0%, #075E54 100%)",
        "icon": "#FFFFFF",
        "description": "Primary brand gradient - never changes between themes"
      },
      "badges": {
        "unread": {
          "background": "#10B981",
          "text": "#FFFFFF",
          "description": "Success color - consistent in both themes"
        }
      },
      "icons": {
        "appBar": "#FFFFFF",
        "bottomNav": "#FFFFFF",
        "description": "Icons in primary-colored areas are always white for contrast"
      }
    }
  }
}
