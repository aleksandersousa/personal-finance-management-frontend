{
  "metadata": {
    "name": "Financial Management Design System",
    "version": "2.0.0",
    "description": "Modern mobile-first design system with comprehensive light/dark theme support, inspired by contemporary messaging app patterns",
    "designStyle": "Clean, gradient-based interface with consistent brand accent colors and adaptive theming"
  },
  "designPrinciples": {
    "visual": [
      "Clean and minimal interface with focus on content hierarchy",
      "High contrast between background and content areas",
      "Consistent brand accent color (gradient) for primary navigation and app bars",
      "Soft shadows and rounded corners for depth and modern feel",
      "Circular avatars and profile pictures for personalization",
      "Consistent use of icons paired with text labels",
      "Unread/notification badges with brand accent color for visibility"
    ],
    "layout": [
      "Mobile-first single column layouts",
      "Vertical hierarchy: Status Bar → App Bar → Navigation Tabs → Content Area → Bottom Navigation",
      "Floating bottom navigation with rounded top corners",
      "Horizontal scrollable lists for secondary navigation (e.g., profile/contact lists)",
      "Sticky app bars and bottom navigation",
      "Generous whitespace between major sections",
      "Card-based component architecture for content grouping"
    ],
    "interaction": [
      "Smooth transitions between states (250ms default)",
      "Active/selected state highlighting with inverted colors in dark mode",
      "Hover states for interactive elements",
      "Touch-friendly target sizes (minimum 44px × 44px)",
      "Visual feedback on all interactive elements"
    ],
    "theming": [
      "Brand accent colors remain consistent across light and dark themes",
      "Background colors invert between themes (white ↔ dark gray/black)",
      "Text and icon colors adapt for contrast (dark ↔ white)",
      "Selected/active states invert between themes",
      "Status bar content adapts (dark icons in light mode, white icons in dark mode)",
      "Unread badges and accent elements maintain brand color in both themes"
    ]
  },
  "colorSystem": {
    "palette": {
      "primary": {
        "main": "#128C7E",
        "light": "#25D366",
        "dark": "#075E54",
        "gradient": "linear-gradient(135deg, #128C7E 0%, #075E54 100%)",
        "contrast": "#FFFFFF",
        "description": "Primary brand color - dark teal/green gradient used for app bars, bottom navigation, and primary UI elements. Remains consistent across light and dark themes."
      },
      "secondary": {
        "main": "#6B7280",
        "light": "#9CA3AF",
        "dark": "#4B5563",
        "contrast": "#FFFFFF",
        "description": "Secondary color for secondary actions and less prominent UI elements"
      },
      "neutral": {
        "white": "#FAFAFA",
        "gray50": "#F9FAFB",
        "gray100": "#F3F4F6",
        "gray200": "#E5E7EB",
        "gray300": "#D1D5DB",
        "gray400": "#9CA3AF",
        "gray500": "#6B7280",
        "gray600": "#4B5563",
        "gray700": "#374151",
        "gray800": "#1F2937",
        "gray900": "#111827",
        "black": "#0A0A0A"
      },
      "success": {
        "main": "#10B981",
        "light": "#34D399",
        "dark": "#059669",
        "badge": "#D1FAE5",
        "contrast": "#FFFFFF",
        "description": "Green for positive states, unread badges, notifications, and success indicators. Consistent across both themes."
      },
      "error": {
        "main": "#EF4444",
        "light": "#F87171",
        "dark": "#DC2626",
        "badge": "#FEE2E2",
        "contrast": "#FFFFFF",
        "description": "Red for errors, negative states, and destructive actions"
      }
    },
    "gradients": {
      "appBar": "linear-gradient(135deg, #128C7E 0%, #075E54 100%)",
      "bottomNav": "linear-gradient(135deg, #128C7E 0%, #075E54 100%)",
      "cardOverlay": "linear-gradient(135deg, rgba(255,255,255,0.1) 0%, rgba(255,255,255,0.05) 100%)",
      "cardDark": "linear-gradient(135deg, #000000 0%, #1F2937 100%)",
      "activeCard": "linear-gradient(135deg, #000000 0%, #1F2937 100%)"
    }
  },
  "typography": {
