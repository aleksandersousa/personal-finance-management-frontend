            "timestamp": {
              "fontSize": "0.75rem",
              "fontWeight": 400,
              "light": "#9CA3AF",
              "dark": "#9CA3AF"
            },
            "badge": {
              "size": "1.5rem",
              "borderRadius": "9999px",
              "background": "#10B981",
              "text": "#FFFFFF",
              "fontSize": "0.75rem",
              "fontWeight": 600
